<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="paddedConstraintLayout">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="primaryButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/accentPink</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:headerBackground">@color/accentPink</item>
        <item name="colorAccent">@color/accentPink</item>
        <item name="android:textColor">@color/accentPink</item>
    </style>
    <style name="secondaryButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
        <item name="strokeColor">@color/gray_400</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="textButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="editText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="background">@android:color/transparent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColorHint">@color/material_on_surface_emphasis_high_type</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="textBanner" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black87</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="appNameBanner" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_700</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="bottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@color/purple_700</item>
    </style>

    <style name="Widget.Theme.FoundnLost.MyView" parent="">
        <item name="android:background">@color/purple_700</item>
        <item name="android:layout_height">@dimen/top_bar_height</item>
    </style>

</resources>